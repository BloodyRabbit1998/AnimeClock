<SwipeToDeleteItem>
    size_hint_y: None
    height: content.height

    MDCardSwipeLayerBox:
        padding: "8dp"

        MDIconButton:
            icon: "trash-can"
            pos_hint: {"center_y": .5}
            on_release: 
    MDCardSwipeFrontBox:

        OneLineListItem:
            id: content
            text: root.text
            _no_ripple_effect: True
<TimeScreen>
    MDBoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1
        ScrollView:
            MDList:
                id:list_time

        MDFloatingActionButton:
            pos_hint:{"center_x":.9,"center_y":.5}
            icon: "plus"
            md_bg_color: app.theme_cls.primary_color
            on_release:root.add_alarm()
        

<MainScreen>
    ScreenManager:
        id:SM_main
        TimeScreen:
            name:"time"
        Screen:
            name:"setting"
    BoxLayout:
        orientation:'vertical'
        size_hint_y:None
        height:dp(10)
    AKFloatingRoundedAppbar:
        AKFloatingRoundedAppbarButtonItem:
            icon: "alarm-plus"
            text: "Будильник"
            on_release: SM_main.current="time"

        AKFloatingRoundedAppbarButtonItem:
            icon: "cog"
            text: "Add"
            on_release: SM_main.current="setting"
        AKFloatingRoundedAppbarAvatarItem:
            source: "assets/google.jpg"
            text: "Google"


